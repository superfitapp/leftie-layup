{{!--
This footer template is shared across all the pages.
--}}

<footer class="m-footer">
  <div class="l-wrapper">
    <div class="m-footer__top">
      <div class="m-footer__top__menu">
        <nav class="m-footer__nav" role="navigation" aria-label="{{t "Footer main menu"}}">
          {{#if @site.navigation}}
            <ul class="m-navigation in-footer-menu">
              {{navigation}}
            </ul>
          {{/if}}
        </nav>
        {{#if @site.secondary_navigation}}
          <nav class="m-footer__nav-secondary" role="navigation" aria-label="{{t "Secondary menu"}}">
            {{navigation type="secondary"}}
          </nav>
        {{/if}}
      </div>
      <div class="m-footer__buttons">
        {{#if @site.facebook}}
          <a href="{{facebook_url @site.facebook}}" target="_blank" rel="noopener" aria-label="Facebook" class="m-footer-icon focusable">
            <span class="icon-facebook" aria-hidden="true"></span>
          </a>
        {{/if}}
        {{#if @site.twitter}}
          <a href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener" aria-label="Twitter" class="m-footer-icon focusable">
            <span class="icon-twitter" aria-hidden="true"></span>
          </a>
        {{/if}}
        <button class="m-footer-icon focusable last js-open-search" aria-label="{{t "Open search"}}">
          <span class="icon-search" aria-hidden="true"></span>
        </button>
      </div>
    </div>
    <div class="m-footer-copyright">
      <p>
        {{@site.title}} &copy; {{date format="YYYY"}}
        &nbsp; &bull; &nbsp;
        {{t "Published with"}} <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a>
      </p>
    </div>
  </div>
</footer>
